bindsym $mod+w exec /usr/bin/firefox-nightly -P bacardi55
bindsym $mod+Shift+w exec /usr/bin/firefox -p acquia
bindsym $mod+n exec /usr/bin/thunar
bindsym Print exec scrot ~/T√©l√©chargements/screenshots/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved"
bindsym $mod+Print exec scrot --focus ~/T√©l√©chargements/screenshots/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved"
bindsym --release Shift+Print exec scrot --select ~/T√©l√©chargements/screenshots/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved"

